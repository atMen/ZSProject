<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    app:cardBackgroundColor="@color/white"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="5dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    app:contentPadding="13dp">

<LinearLayout
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <RelativeLayout

        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/cpname"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            android:lineSpacingExtra="8dp"            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="产品名称：苹果"
            />

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"/>

        <TextView
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:id="@+id/cptime"
            android:textSize="15sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            android:lineSpacingExtra="8dp"            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018-06-18"
            />

    </RelativeLayout>

    <View
        android:layout_marginTop="5dp"
        android:id="@+id/dotted_line"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/bg_dotted_line"
        android:layerType="software"
        />



    <TextView
        android:layout_marginTop="5dp"
        android:textSize="16sp"
        android:id="@+id/bh"
        android:layout_width="match_parent"
        android:textColor="@color/black"
        android:text="编号：123321"
        android:layout_height="wrap_content"
        />

    <!--<TextView-->
        <!--android:layout_marginTop="3dp"-->
        <!--android:textSize="16sp"-->
        <!--android:id="@+id/simple_content"-->
        <!--android:layout_width="match_parent"-->
        <!--android:text="这是盎司和低俗会否身份证普这是是我诸多好评是组是获批租的号是放屁租房的获批符合次答复"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:lineSpacingExtra="5dp"-->
        <!--/>-->

    <LinearLayout
        android:paddingBottom="15dp"
        android:paddingTop="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:text="品牌"
                android:layout_height="wrap_content"
                />
            <TextView
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                android:id="@+id/spjg_pp"
                android:layout_width="wrap_content"
                android:textColor="@color/login_textcolor"
                android:text="红富士"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:text="规格"
                android:layout_height="wrap_content"
                />
            <TextView
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                android:id="@+id/gg"
                android:layout_width="wrap_content"
                android:textColor="@color/login_textcolor"
                android:text="20kg"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:text="数量"
                android:layout_height="wrap_content"
                />
            <TextView
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                android:id="@+id/simple_text"
                android:layout_width="wrap_content"
                android:textColor="@color/login_textcolor"
                android:text="100份"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

    </LinearLayout>



    <RelativeLayout
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="16sp"
            android:id="@+id/simple_time"
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:text="2018-06-12"
            android:layout_height="wrap_content"
            />


        <TextView
            android:layout_marginRight="8dp"
            android:layout_alignParentRight="true"
            android:id="@+id/simple_remo"
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:background="@drawable/xg"
            />


    </RelativeLayout>

</LinearLayout>

</android.support.v7.widget.CardView>